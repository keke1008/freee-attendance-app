<h2><%= t('common.account_setting') %></h2>

<%= bootstrap_form_with(model: @employee, url: registration_path(resource_name), local: true) do |f| %>
  <%= f.text_field :name,
                   autocomplete: 'name',
                   autofocus: true %>

  <%= f.email_field :email, autocomplete: 'email' %>

  <%= f.password_field :current_password,
                       autocomplete: 'current-password',
                       help: "#{@minimum_password_length} characters minimum" %>

  <%= f.password_field :password,
                       autocomplete: 'new-password',
                       label: t('common.new_password'),
                       help: "#{@minimum_password_length} characters minimum" %>

  <%= f.password_field :password_confirmation, autocomplete: 'new-password' %>

  <%= f.primary %>
<% end %>

<%= button_to t('common.delete_account'),
              registration_path(resource_name),
              data: { turbo_confirm: t('common.delete_confirm') },
              method: :delete,
              class: 'btn btn-danger my-4' %>

<%= link_to t('common.back'), :back %>
