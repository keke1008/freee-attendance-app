<div class="d-flex justify-content-center">
  <div class="w-75">
    <h2>
      <%= t('common.sign_in') %>
    </h2>

    <%= bootstrap_form_with(model: @manager, url: session_path(resource_name), local: true) do |f| %>
      <%= f.text_field :name, autocomplete: 'name', autofocus: true %>

      <%= f.email_field :email, autocomplete: 'email' %>

      <%= f.password_field :password, autocomplete: 'new-password' %>

      <%= f.primary t('common.sign_in') %>
    <% end %>

    <%= button_to t('common.sign_up'),
                  new_registration_path(resource_name),
                  method: :get,
                  class: 'btn btn-secondary my-4' %>
  </div>
</div>
