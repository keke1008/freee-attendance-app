<div class="d-flex justify-content-between">
  <h1>
    <%= @manager.store_name %>
  </h1>

  <div>
    <%= button_to t('common.change_setting'),
                  edit_manager_registration_path,
                  method: :get,
                  class: 'btn btn-outline-primary' %>
  </div>
</div>

<div class="card shadow">
  <%= turbo_frame_tag 'attendances-chart' do %>
    <div class="card-header d-flex justify-content-between">
      <h2><%= t('common.attendance_time') %></h2>

      <%= date_pagination_span_nav @page %>
    </div>

    <div class="card-body">
      <div class="d-flex justify-content-center gap-3">
        <h3><%= date_pagination_current_span(@page) %></h3>
        <%= date_pagination_go_back_current_nav(@page) %>
      </div>

      <%= column_chart @employees_attendances, suffix: t('datetime.prompts.minute') %>

      <div class="d-flex justify-content-end">
        <%= date_pagination_date_nav @page %>
      </div>
    </div>
  <% end %>
</div>

<h2><%= t('common.employee_list') %></h2>

<ol class="list-group">
  <% for employee in @employees %>
    <li class="list-group-item">
      <%= link_to employee.name, manager_employee_path(employee) %>
    </li>
  <% end %>
</ol>
