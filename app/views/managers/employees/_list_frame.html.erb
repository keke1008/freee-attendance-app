<div class="col-xxl-6 px-xxl-1">
  <div class="card shadow flex-fill my-2">
    <div class="card-header d-flex justify-content-between align-items-center">
      <div class="lead"><%= title %></div>

      <div class="d-flex justify-content-center gap-2">
        <div class="lead">
          <%= date_pagination_current_span(@page) %>
        </div>
        <%= date_pagination_go_back_current_nav(@page) %>
      </div>

      <%= date_pagination_span_nav @page %>
    </div>

    <div class="card-body">
      <div class="container">
        <div class="row border-bottom border-3 pb-2">
          <div class="col-3">
            <%= t('activerecord.attributes.attendance.date') %>
          </div>
          <div class="col-3">
            <%= t('activerecord.attributes.attendance.begin_at') %>
          </div>
          <div class="col-3">
            <%= t('activerecord.attributes.attendance.end_at') %>
          </div>
          <div class="col-3 d-flex justify-content-end gap-2">
            <%= link_to t('common.add'),
                        [:new, :manager, @employee, item_name_symbol],
                        class: 'btn btn-sm btn-outline-primary',
                        data: { turbo_frame: dom_id(new_item) } %>
            <div class="d-flex justify-content-end">
              <%= date_pagination_date_nav @page %>
            </div>
          </div>
        </div>

        <%= turbo_frame_tag new_item %>

        <%= yield %>
      </div>
    </div>
  </div>
</div>
