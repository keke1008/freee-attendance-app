<%= turbo_frame_tag shift do %>
  <div class="row border-bottom py-2">
    <div class="col-4">
      <%= l(shift.begin_at) %>
    </div>

    <div class="col-4">
      <%= l(shift.end_at) %>
    </div>

    <div class="col-4">
      <div class="d-flex justify-content-end">
        <%= link_to t('common.edit'),
                    edit_manager_employee_shift_path(@employee, shift),
                    class: 'btn btn-sm btn-outline-primary me-2' %>
        <%= button_to t('common.delete'),
                      [:manager, @employee, shift],
                      method: :delete,
                      data: { turbo_confirm: t('common.delete_confirm') },
                      class: 'btn btn-sm btn-outline-danger' %>
      </div>
    </div>
  </div>
<% end %>
